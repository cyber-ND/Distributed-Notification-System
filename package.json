{
  "name": "@dns/monorepo",
  "version": "1.0.0",
  "description": "Distributed Notification System - Monorepo",
  "private": true,
  "scripts": {
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "check-format": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\"",
    "lint": "pnpm -r --parallel run lint",
    "check-types": "pnpm -r --parallel run type-check"
  },
  "workspaces": [
    "services/*"
  ],
  "keywords": [
    "monorepo",
    "microservices",
    "notification-system",
    "distributed-system"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
