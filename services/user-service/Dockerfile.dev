# Development Dockerfile for user-service (Laravel)
FROM php:8.2-fpm-alpine

# Install system dependencies
RUN apk add --no-cache bash git curl libpng libjpeg-turbo libwebp freetype icu-dev zlib-dev oniguruma-dev libxml2-dev

# Install Composer
COPY --from=composer:2.7 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www

# Copy only composer files first for caching
COPY composer.json composer.lock ./

# Install PHP dependencies
RUN composer install --prefer-dist --no-progress --no-interaction

# Copy the rest of the application
COPY . .

# Expose port for development
EXPOSE 8000

# Start Octane in watch mode
CMD ["php", "artisan", "octane:start", "--watch", "--host=0.0.0.0", "--port=8000"]
